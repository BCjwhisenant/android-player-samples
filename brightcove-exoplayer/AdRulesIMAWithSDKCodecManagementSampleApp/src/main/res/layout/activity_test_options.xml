<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.brightcove.player.samples.ima.adrules.TestOptionsActivity"
    android:layoutDirection="ltr">

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerTestContent"
        android:spinnerMode="dialog"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/spinner_vertical_margin"/>

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxUseHlsIfAvailable"
        android:text="@string/use_hls_if_available"
        android:textColor="@android:color/tertiary_text_light"
        android:checked="false"
        android:textStyle="bold"
        android:textAlignment="textStart"
        android:layout_below="@id/spinnerTestContent"
        android:visibility="visible"
        android:enabled="true"
        android:layout_marginBottom="4dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_load_player"
        android:id="@+id/buttonLoadPlayer"
        android:onClick="loadPlayer"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
